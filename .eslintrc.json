{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", { "code": 80 }],
        "comma-dangle": ["error", "never"],
        "semi": 0
    },
    "plugins": ["prettier"]
}
